<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/root_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/take_photo_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

        <imagecrop.kevin.com.myapplication3.CameraPreview
                android:id="@+id/cameraPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <imagecrop.kevin.com.myapplication3.FocusView
                android:id="@+id/view_focus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true" />
        <!--网格参考线-->
        <imagecrop.kevin.com.myapplication3.ReferenceLine
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/relativeLayout" />

        <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:lineSpacingMultiplier="1.0"
                android:text="拍照题目\n文字尽量与参考线对齐"
                android:textColor="@color/white" />

        <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/black_6"
                android:padding="12dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:onClick="close"
                    android:padding="12dp"
                    android:src="@drawable/ic_close_selector" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="takePhoto"
                    android:padding="12dp"
                    android:src="@drawable/ic_takephoto_selector"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            <CheckBox
                    android:id="@+id/photographs"
                    style="@style/flash_lamp_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:checked="false"
                    android:padding="10dp"
                    android:textColor="@color/blue_7"
                    android:textSize="14sp" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
